<%= form_with(model: Confession.new, class: "bg-white rounded-lg shadow p-6") do |f| %>
  <div class="mb-4">
    <%= f.label :body, "Your Confession", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_area :body, 
        class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500",
        maxlength: 500,
        placeholder: "Share your thoughts... (max 500 characters)" %>
  </div>
  
  <%= f.submit "Post Confession", 
      class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-colors" %>
<% end %>